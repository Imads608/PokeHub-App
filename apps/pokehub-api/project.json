{
  "name": "pokehub-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/pokehub-api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/pokehub-api",
        "main": "apps/pokehub-api/src/main.ts",
        "tsConfig": "apps/pokehub-api/tsconfig.app.json",
        "assets": ["apps/pokehub-api/src/assets"],
        "webpackConfig": "apps/pokehub-api/webpack.config.js",
        "generatePackageJson": true
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "pokehub-api:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "pokehub-api:build:development"
        },
        "production": {
          "buildTarget": "pokehub-api:build:production"
        }
      }
    },
    "verify": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["^build", "^lint", "^test"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/pokehub-api",
        "main": "apps/pokehub-api/src/main.ts",
        "tsConfig": "apps/pokehub-api/tsconfig.app.json",
        "assets": ["apps/pokehub-api/src/assets"],
        "webpackConfig": "apps/pokehub-api/webpack.config.js",
        "generatePackageJson": true
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/pokehub-api/jest.config.ts"
      }
    },
    "typecheck-spec": {
      "executor": "nx:run-commands",
      "options": {
        "command": "if ls apps/pokehub-api/src/**/*.spec.ts apps/pokehub-api/src/**/*.spec.tsx 1> /dev/null 2>&1; then tsc --noEmit -p apps/pokehub-api/tsconfig.spec.json; else echo \"No spec files found, skipping typecheck\"; fi",
        "cwd": "{workspaceRoot}"
      },
      "cache": true,
      "inputs": [
        "{projectRoot}/tsconfig.spec.json",
        "{projectRoot}/src/**/*.ts",
        "{projectRoot}/src/**/*.tsx",
        "{projectRoot}/src/**/*.spec.ts",
        "{projectRoot}/src/**/*.spec.tsx",
        "{workspaceRoot}/tsconfig.base.json"
      ]
    }
  }
}
