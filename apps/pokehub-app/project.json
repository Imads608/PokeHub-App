{
  "name": "pokehub-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/pokehub-app",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["^build"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/pokehub-app"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/pokehub-app"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "next dev apps/pokehub-app -p 4200 | pino-pretty"
      },
      "configurations": {
        "development": {
          "buildTarget": "pokehub-app:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "pokehub-app:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "pokehub-app:build:production"
      }
    },
    "verify": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["^build", "^lint", "^test"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/pokehub-app"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/pokehub-app"
        },
        "production": {}
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/pokehub-app/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
