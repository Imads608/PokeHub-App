{
  "name": "backend-pokehub-users-db",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/backend/pokehub-users-db/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/backend/pokehub-users-db/jest.config.ts"
      }
    },
    "typecheck-spec": {
      "executor": "nx:run-commands",
      "options": {
        "command": "if ls packages/backend/pokehub-users-db/src/**/*.spec.ts packages/backend/pokehub-users-db/src/**/*.spec.tsx 1> /dev/null 2>&1; then tsc --noEmit -p packages/backend/pokehub-users-db/tsconfig.spec.json; else echo \"No spec files found, skipping typecheck\"; fi",
        "cwd": "{workspaceRoot}"
      },
      "cache": true,
      "inputs": [
        "{projectRoot}/tsconfig.spec.json",
        "{projectRoot}/src/**/*.ts",
        "{projectRoot}/src/**/*.tsx",
        "{projectRoot}/src/**/*.spec.ts",
        "{projectRoot}/src/**/*.spec.tsx",
        "{workspaceRoot}/tsconfig.base.json"
      ]
    }
  }
}
